<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="200.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.view.LoginController">
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <TextField id="user" fx:id="user" maxWidth="300.0" onAction="#checkLogin" promptText="Username">
               <padding>
                  <Insets bottom="5.0" top="5.0" />
               </padding>
            </TextField>
            <PasswordField id="pw" fx:id="pw" maxWidth="300.0" promptText="Password">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="5.0" top="10.0" />
               </padding>
            </PasswordField>
            <Button id="login" contentDisplay="CENTER" mnemonicParsing="false" onAction="#checkLogin" prefWidth="100.0" text="Login" textAlignment="JUSTIFY">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="5.0" top="5.0" />
               </padding>
            </Button>
         </children>
      </VBox>
   </center>
</BorderPane>
